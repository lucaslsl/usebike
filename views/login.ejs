<script type="text/javascript">

$( document ).ready(function() {
    isLogged();

    function isLogged(){
      $.ajax({
          url: "api/me/details",
          type: "get",
          dateType: "json",
          success: function (response) {  
            if(window.location.pathname == "/"){
               window.location.replace("/home");
            }
          },
          error: function(jqXHR, textStatus, errorThrown) {
            erro = jqXHR.status;          
            if(erro == 401 && window.location.pathname != "/"){
              window.location.replace("/");
            } 
          }
       });      
    }

    function authenticate(){
      email = $('#email').val();      
      password = $('#password').val();

      data = [];
      data.push({name: 'email', value: email});  
      data.push({name: 'password',value: password});
          

      $.ajax({
          url: "api/user/login",
          type: "put",
          data: data,
          dateType: "json",
          success: function (response) {  
            window.location.replace("/home");
          },
          error: function(jqXHR, textStatus, errorThrown) {
            erro = jqXHR.status;
            if(erro == 404){
              toastr.error('Verifique os dados informados e tente novamente.','Este usuário não existe.');
            }
            else if(erro == 401){
              toastr.warning('Verifique os dados informados e tente novamente.','Usuário ou senha incorretos.');
            }
           
          }
       });
    }

    $("#btnLogin").on("click", function() {
      authenticate(); 
    });

});



</script>

