<script type="text/javascript">

$( document ).ready(function() {

    function signUp(){
      var first_name = $('#first_name').val();
      var last_name = $('#last_name').val();
      var email = $('#email').val();
      var password = $('#password').val();

      data = [];
      data.push({name: 'first_name',value: first_name});
      data.push({name: 'last_name', value: last_name});
      data.push({name: 'email', value: email});
      data.push({name: 'password', value: password});

      $.ajax({
        url: "api/user/signUp",
        type: "post",
        data: data,
        dateType: "json",
        success: function (response) { 
          toastr.success("Cadastro realizado com sucesso!"); 
          window.setTimeout(function() {
            window.location.replace("/");
          }, 3000);
        },
        error: function(jqXHR, textStatus, errorThrown) {
         var responseText = jQuery.parseJSON(jqXHR.responseText);
         console.log(responseText.error);
        }
       });
    }

    $("#btnSignUp").on("click", function() {

      var email = $('#email').val();

      $.ajax({
        url: "api/user/available?email="+email,
        type: "get",
        dateType: "json",
        success: function (response) {  
          if(response.available == true){
            signUp();
          }else{
            toastr.warning("O email informado não está disponível, escolha outro endereço para continuar.");
          }
        },
        error: function(jqXHR, textStatus, errorThrown) {
         var responseText = jQuery.parseJSON(jqXHR.responseText);
         console.log(responseText.error);
        }
       });
      

    });

    $("#password_confirmation, #password").on("keypress", function() {
      if($("#validatePass").hasClass("issue")){
        $("#btnSignUp").attr("disabled", true);
      }else{
        $("#btnSignUp").attr("disabled", false);
      }
    });


});

</script>

